{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }]
  },
  "overrides": [
    {
      "files": ["*.test.js?(x)"],
      "rules": {
        "no-undef": 0
      }
    }
  ]
}
